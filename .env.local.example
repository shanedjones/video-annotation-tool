# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (NextAuth.js with Azure AD B2C)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Azure AD B2C
AZURE_AD_B2C_TENANT_NAME=your-tenant-name
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_PRIMARY_USER_FLOW=B2C_1_signin_signup

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key

# Azure Cosmos DB
COSMOS_DB_CONNECTION_STRING=your-cosmos-db-connection-string
COSMOS_DB_NAME=your-cosmos-db-name

# Azure Media Services
AZURE_MEDIA_SERVICES_ACCOUNT_NAME=your-media-services-account-name
AZURE_MEDIA_SERVICES_ACCOUNT_KEY=your-media-services-account-key

# Azure SignalR Service (for future real-time features)
AZURE_SIGNALR_CONNECTION_STRING=your-signalr-connection-string